@model IEnumerable<SimpleMVC.Models.Person>

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <form id="frm" action="AddPeople" method="post">
        <input name="name" type="text" />
        <input type="submit" value="Add" />
    </form>
    <table class="table">
        <tr>
            <th>
                ID
            </th>
            <th>Name</th>
        </tr>
    
    @foreach (var item in Model)
    {
        <tr>
            <td>
                @item.ID
            </td>
            <td>
                @item.Name
            </td>
        </tr>
    }
    
    </table>
</body>
</html>
